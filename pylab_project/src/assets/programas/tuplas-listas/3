import math

p1 = (input("Seleccione el primer punto:"))
p2 = (input("Seleccione el segundo punto:"))

x1 = p1[0]
y1 = p1[1]

x2 = p2[0]
y2 = p2[1]

x_difference = x2 - x1
y_difference = y2 - y1

squares_sum = (x_difference) ** 2 + (y_difference) ** 2

distance = math.sqrt(squares_sum)

m = y_difference/x_difference
b = y1 - m * x1

print(f'la distancia es {distance}')
print(f'la pendiente es {m}')
print(f'la ordenada al origen es {b}')
