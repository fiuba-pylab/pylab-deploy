CONSTANTE_FAHRENHEIT_A_CELSIUS = 32 
CONSTANTE_CONVERSION = 5 / 9
temp_fahrenheit = 60
temperatura_celsius = (temp_fahrenheit - CONSTANTE_FAHRENHEIT_A_CELSIUS) * CONSTANTE_CONVERSION
if temperatura_celsius <= 0:
    estado = "Sólido (Hielo)"
else:
    if temperatura_celsius < 100:
        estado = "Líquido (Agua)"
    else:
        estado = "Gas (Vapor)"
print(f'El agua a {temperatura_celsius}°C está en estado: {estado}')